<!DOCTYPE html>
<html>
<head>
	<title>计算器</title>
	<script type="text/javascript" src="./vue.js"></script>
</head>
<body>
	<div id="app">
		<input v-model="n1">

		<select v-model="opt">
			<option value="+">+</option>
			<option value="-">-</option>
			<option value="*">*</option>
			<option value="/">/</option>
		</select>

		<input v-model="n2">

		<input type="button" value="=" @click="calc">

		<input v-model="result">
	</div>

	<script>

		var vm = new Vue({
			el: '#app' ,
			data: {
				n1: 0,
				n2: 0,
				result: 0,
				opt: '+'
			},
			methods: {
				calc(){
					switch(this.opt){
						case '+' : this.result = parseInt(this.n1) + parseInt(this.n2) 
							break;
						case '-' : this.result = parseInt(this.n1) - parseInt(this.n2) 
							break;
						case '*' : this.result = tparseInt(this.n1) * parseInt(this.n2) 
							break;
						case '/' : this.result = parseInt(this.n1) / parseInt(this.n2) 
							break;
					}
				}
			}

		})

	</script>
</body>
</html>
